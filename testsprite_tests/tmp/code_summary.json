{
  "project_name": "Resume Builder",
  "project_type": "fullstack",
  "description": "A professional resume builder application with real-time preview, multiple templates, and PDF export functionality",
  "tech_stack": {
    "frontend": {
      "framework": "React 19.0.0",
      "ui_library": "Shadcn UI (Radix UI components)",
      "styling": "Tailwind CSS 3.4.17",
      "routing": "React Router DOM 7.5.1",
      "state_management": "React Context API",
      "form_management": "React Hook Form 7.56.2",
      "validation": "Zod 3.24.4",
      "pdf_export": ["html2canvas 1.4.1", "jsPDF 3.0.3"],
      "icons": "Lucide React 0.507.0",
      "build_tool": "Create React App (CRA) with CRACO 7.1.0",
      "notifications": "Sonner 2.0.3"
    },
    "backend": {
      "framework": "FastAPI",
      "database": "MongoDB",
      "async_driver": "Motor (AsyncIOMotorClient)",
      "middleware": "CORS (Starlette)"
    }
  },
  "features": {
    "core_functionality": [
      {
        "feature": "Multi-step Form Wizard",
        "description": "6-step guided resume building process with step indicator",
        "steps": [
          "Personal Details (name, title, contact info, summary)",
          "Education (degree, institution, dates)",
          "Experience (job title, company, dates, responsibilities)",
          "Skills (technical and soft skills)",
          "Additional Information (certifications, projects, references)"
        ]
      },
      {
        "feature": "Real-time Preview",
        "description": "Live preview of resume as user fills out forms",
        "implementation": "React Context API for state synchronization"
      },
      {
        "feature": "Template Selection",
        "description": "5 professional resume templates with different styles",
        "templates": [
          "Modern (blue gradient header, contemporary design)",
          "Classic (traditional serif font, bordered layout)",
          "Minimal (clean, simple, sans-serif)",
          "Elegant (two-column layout with sidebar)",
          "Creative (colorful gradient, artistic)"
        ]
      },
      {
        "feature": "PDF Export",
        "description": "Export resume to PDF with high-quality rendering",
        "implementation": "html2canvas + jsPDF with gradient handling and multi-page support"
      },
      {
        "feature": "Auto-Save",
        "description": "Automatic data persistence to browser localStorage",
        "implementation": "useEffect hook monitoring resumeData changes"
      },
      {
        "feature": "Form Validation",
        "description": "Client-side validation using Zod schemas",
        "implementation": "React Hook Form with @hookform/resolvers"
      },
      {
        "feature": "Responsive Design",
        "description": "Mobile-friendly UI with adaptive layouts",
        "implementation": "Tailwind CSS responsive utilities"
      },
      {
        "feature": "Dynamic Form Fields",
        "description": "Add/remove multiple entries for education, experience, skills, etc.",
        "implementation": "Array state management with React hooks"
      }
    ],
    "ui_components": [
      "Button", "Card", "Input", "Label", "Textarea", "Checkbox", 
      "Tabs", "Badge", "Toast/Toaster", "Form", "Select", 
      "Dialog", "Accordion", "Progress", "Separator"
    ],
    "pages": [
      {
        "path": "/",
        "component": "ResumeBuilder",
        "description": "Main resume builder interface with split view (form + preview)"
      }
    ]
  },
  "architecture": {
    "frontend_structure": {
      "src/components/ResumeBuilder": "Form components for each step",
      "src/components/ResumeTemplates": "5 resume template components",
      "src/components/ui": "Reusable Shadcn UI components",
      "src/context": "React Context for global resume state",
      "src/pages": "Page-level components",
      "src/hooks": "Custom React hooks (e.g., use-toast)"
    },
    "state_management": {
      "type": "React Context API",
      "provider": "ResumeProvider",
      "context": "ResumeContext",
      "state_shape": {
        "resumeData": "Object containing all resume sections",
        "currentStep": "Current form step (0-5)",
        "selectedTemplate": "Template ID string"
      },
      "persistence": "localStorage with JSON serialization"
    },
    "backend_structure": {
      "api_prefix": "/api",
      "endpoints": [
        "GET /api/ - Health check",
        "POST /api/status - Create status check",
        "GET /api/status - Get all status checks"
      ],
      "database": "MongoDB with status_checks collection"
    }
  },
  "key_files": [
    {
      "path": "frontend/src/pages/ResumeBuilder.jsx",
      "purpose": "Main page component with layout and routing"
    },
    {
      "path": "frontend/src/context/ResumeContext.js",
      "purpose": "Global state management for resume data"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/FormContainer.jsx",
      "purpose": "Orchestrates multi-step form navigation"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/ResumePreview.jsx",
      "purpose": "Live preview and PDF export functionality"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/PersonalDetailsForm.jsx",
      "purpose": "Step 1: Personal information form"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/EducationForm.jsx",
      "purpose": "Step 2: Education entries form"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/ExperienceForm.jsx",
      "purpose": "Step 3: Work experience form"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/SkillsForm.jsx",
      "purpose": "Step 4: Skills input form"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/AdditionalInfoForm.jsx",
      "purpose": "Step 5: Certifications, projects, references"
    },
    {
      "path": "frontend/src/components/ResumeBuilder/TemplateSelector.jsx",
      "purpose": "Template selection interface"
    },
    {
      "path": "frontend/src/components/ResumeTemplates/ModernTemplate.jsx",
      "purpose": "Modern template with blue gradient"
    },
    {
      "path": "frontend/src/components/ResumeTemplates/ClassicTemplate.jsx",
      "purpose": "Classic template with traditional styling"
    },
    {
      "path": "frontend/src/components/ResumeTemplates/MinimalTemplate.jsx",
      "purpose": "Minimal template with clean design"
    },
    {
      "path": "frontend/src/components/ResumeTemplates/ElegantTemplate.jsx",
      "purpose": "Elegant two-column template"
    },
    {
      "path": "frontend/src/components/ResumeTemplates/CreativeTemplate.jsx",
      "purpose": "Creative template with gradients"
    },
    {
      "path": "backend/server.py",
      "purpose": "FastAPI backend with MongoDB integration"
    }
  ],
  "dependencies": {
    "critical": [
      "react",
      "react-dom",
      "react-hook-form",
      "html2canvas",
      "jspdf",
      "tailwindcss",
      "lucide-react"
    ],
    "ui_components": [
      "@radix-ui/react-*",
      "class-variance-authority",
      "clsx",
      "tailwind-merge"
    ],
    "utilities": [
      "zod",
      "date-fns",
      "sonner"
    ]
  },
  "configuration": {
    "port": {
      "frontend": 3000,
      "backend": 8000
    },
    "build_config": "craco.config.js",
    "tailwind_config": "tailwind.config.js",
    "postcss_config": "postcss.config.js"
  },
  "testing_considerations": {
    "critical_user_flows": [
      "Complete resume creation through all 6 steps",
      "Switch between templates and verify preview updates",
      "Export PDF and verify layout/styling",
      "Add/remove multiple education/experience entries",
      "Form validation on required fields",
      "Data persistence across page refreshes (localStorage)"
    ],
    "known_issues": [
      "PDF export had gradient rendering issues (resolved with html2canvas onclone gradient replacement)",
      "PDF export styling required inline styles instead of Tailwind utilities for consistent rendering"
    ],
    "browser_compatibility": "Modern browsers with localStorage and Canvas API support"
  }
}

